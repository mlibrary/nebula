datacenter = "hatcher-umich"
node_name = "hatcher-umich-<%= @hostname %>"
bind = "<%= @bind_address %>"
data_dir = "/opt/consul"
encrypt = "<%= @gossip_encryption_key %>"
ca_file = "/etc/consul.d/consul-agent-ca.pem"
<% @pems.keys.each do |filename| -%>
<% if /-key\.pem$/.match? filename -%>
key_file = "/etc/consul.d/<%= filename %>"
<% else -%>
cert_file = "/etc/consul.d/<%= filename %>"
<% end -%>
<% end -%>
verify_incoming = true
verify_outgoing = true
verify_server_hostname = true

acl = {
  enabled = true
  default_policy = "allow"
  enable_token_persistence = true
}

performance = {
  raft_multiplier = 1
}
