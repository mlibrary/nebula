# Managed by puppet (nebula/profile/metricbeat/metricbeat.yml.erb)

metricbeat.modules:
- module: system
  enabled: true
  period: <%= @period %>s
  processes: ['.*']
  metricsets:
    # CPU stats
    - cpu

    # System Load stats
    - load

    # Per CPU core stats
    #- core

    # IO stats
    - diskio

    # Per filesystem stats
    - filesystem

    # File system summary stats
    - fsstat

    # Memory stats
    - memory

    # Network stats
    - network

    # Per process stats
    - process

output.logstash:
  # The Logstash hosts
  hosts: <%= @logstash_hosts.to_s %>

  # Optional SSL. By default is off.
  # List of root certificates for HTTPS server verifications
  <%- if @logstash_auth_cert == '' -%>
  #ssl.certificate_authorities: ["file.crt"]
  <%- else -%>
  ssl.certificate_authorities: ["/etc/ssl/certs/logstash-forwarder.crt"]
  <%- end -%>

  # Certificate for SSL client authentication
  #ssl.certificate: "/etc/pki/client/cert.pem"

  # Client Certificate Key
  #ssl.key: "/etc/pki/client/cert.key"
