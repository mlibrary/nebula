logging {
  level    = "warn"
  format   = "logfmt"
  write_to = [loki.process.service__alloy.receiver]
}

<% @log_files.each { |service_name,files| files.each_with_index { |pathname,i| -%>
loki.source.file "<%= "#{service_name}_#{i}" -%>" {
  targets    = [{"__path__" = "<%= pathname -%>"}]
  forward_to = [loki.process.service__<%= service_name -%>.receiver]
}
<% } } -%>

loki.process "service__alloy" {
  stage.static_labels {values = {"service" = "alloy"}}
  forward_to = [loki.process.hostname.receiver]
}

<% @log_files.each_key { |service_name| -%>
loki.process "service__<%= service_name -%>" {
  stage.static_labels {values = {"service" = "<%= service_name -%>"}}
  forward_to = [loki.process.hostname.receiver]
}
<% } -%>

loki.process "hostname" {
  stage.static_labels {values = {"hostname" = "<%= @hostname %>",}}
  forward_to = [loki.write.loki.receiver]
}

loki.write "loki" {
  endpoint {
    url = "<%= @loki_endpoint_url %>"
    tls_config {
      cert_file = "/var/lib/alloy/crt.pem"
      key_file  = "/var/lib/alloy/crt.key"
    }
  }
}
